
      <div class="page_padding">
        <div class="landing_container">
          <div class="container_section image">{%- if section.settings.landing_image == nil -%}<img src="https://uploads-ssl.webflow.com/633ad4e42c7da0c6cfbbb8ac/633c0cbb6518b6d57511d591_room-header.jpg" loading="lazy" alt="" class="frame-fullimage">{%- else -%}<img src="{{ section.settings.landing_image.src | img_url: 'master' }}" loading="lazy" alt="{{ section.settings.landing_image.alt | escape }}" class="frame-fullimage" srcset="{{ section.settings.landing_image | img_url: '1920x' }} 1920w,{{ section.settings.landing_image | img_url: '1600x' }} 1600w,{{ section.settings.landing_image | img_url: '1366x' }} 1366w,{{ section.settings.landing_image | img_url: '1024x' }} 1024w,{{ section.settings.landing_image | img_url: '768x' }} 768w,{{ section.settings.landing_image | img_url: '640x' }} 640w">{%- endif -%}</div>
