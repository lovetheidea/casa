    {
      "type": "text",
      "id": "cta_button_text",
      "label": "CTA Button Text",
      "default": "Shop The Sale"
    },
    {
      "type": "richtext",
      "id": "heading_paragraph",
      "label": "Heading Paragraph"
    },
    {
      "type": "image_picker",
      "id": "landing_image",
      "label": "Landing Image"
    },
    {
      "type": "url",
      "id": "cta_button_link",
      "label": "CTA Button Link"
    },
    {
      "type": "text",
      "id": "cta_button_link_text",
      "label": "CTA Button Link Text",
      "default": "{{ section.settings.cta_button_text }}"
    }
  ]
}
