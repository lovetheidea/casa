{% capture listItems %}

{%- assign allItems = collections -%}
{%- for item in allItems -%}{% assign condition_0 = false %}                  
                {% if item.metafields.udesly['collection-type'] == "Tableware" %}
                    {% assign condition_0 = true %}
                {% endif %}{% if condition_0 %}
 <div role="listitem" class="w-dyn-item">
                          <a id="w-node-fc113973-5363-50ce-3ca3-22bd47cf79bf-5a57ba28" href="{{ item.url }}" class="paragraph_filters">{{ item.title }}</a>
                        </div>
{% endif %}
{%- endfor -%}

{% endcapture %}
{% assign items_length = listItems | strip | size %}

<div class="collection-list-wrapper w-dyn-list" udy-collection="collection">
                      {%- unless items_length == 0 -%}<div role="list" class="nav_dropdown-menu_content-link-wrapper w-dyn-items">
                        {{ listItems }}
                      </div>{%- endunless -%}
